        <Ellipse x:Name="posto1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Margin="103,267,0,0" Stroke="Black" VerticalAlignment="Top" Width="65"/>
        <Ellipse x:Name="posto2" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="47" Margin="212,267,0,0" Stroke="Black" VerticalAlignment="Top" Width="54"/>
        <Ellipse x:Name="posto3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="49" Margin="330,267,0,0" Stroke="Black" VerticalAlignment="Top" Width="63"/>
        <Ellipse x:Name="posto4" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="51" Margin="466,265,0,0" Stroke="Black" VerticalAlignment="Top" Width="58"/>
